{
  "name": "ember",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "ci:test": "vitest run --reporter=verbose",
    "tauri": "tauri",
    "dev:stub": "tauri dev",
    "dev:real": "tauri dev -- --features kws_real",
    "dev:x11": "EMB_DISPLAY_BACKEND=x11 tauri dev",
    "dev:wayland": "EMB_DISPLAY_BACKEND=wayland tauri dev",
    "build:real": "tauri build -- --features kws_real",
    "tauri:dev": "bash scripts/dev.sh info",
    "tauri:debug": "bash scripts/dev.sh debug",
    "tauri:trace": "bash scripts/dev.sh trace",
    "setup:audio": "bash scripts/install_sherpa_onnx_binary.sh && bash scripts/fetch_models.sh",
    "setup:audio:posix": "bash scripts/install_sherpa_onnx_binary.sh && bash scripts/fetch_models.sh",
    "setup:audio:build": "bash scripts/install_sherpa_onnx.sh && bash scripts/fetch_models.sh",
    "setup:audio:win": "powershell -ExecutionPolicy Bypass -File scripts/install_sherpa_onnx.ps1; powershell -ExecutionPolicy Bypass -File scripts/fetch_models.ps1",
    "package:appimage": "bash scripts/release/package_appimage.sh",
    "package:deb": "bash scripts/release/package_deb.sh",
    "package:linux": "npm run package:appimage && npm run package:deb"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tauri-apps/api": "^2.0.0",
    "lucide-react": "^0.553.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/cli": "^2.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.0",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsdom": "^25.0.0",
    "postcss": "^8.5.6",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vitest": "^2.0.0"
  }
}
